import plotly.graph_objects as go
import plotly.express as px
import pandas as pd

df = pd.read_csv('../data/processed/lok_sabha_2024_cleaned.csv')

COLORS = {
    'primary': '#2c3e50',
    'accent1': '#e74c3c',
    'accent2': '#3498db',
    'accent3': '#f39c12',
    'accent4': '#2ecc71',
    'background': '#ecf0f1',
}

# Common layout settings for ALL charts
mobile_layout = dict(
    autosize=True,
    margin=dict(l=30, r=30, t=80, b=40),
    font=dict(size=11, family='Arial'),
    title_font_size=16,
    legend_font_size=10,
    template='plotly_white',
    paper_bgcolor=COLORS['background']
)

# 1. Criminal Gauge - MOBILE OPTIMIZED
criminal_pct = (df['Has_Criminal_Cases'].sum() / len(df)) * 100

fig = go.Figure(go.Indicator(
    mode = "gauge+number",
    value = criminal_pct,
    title = {'text': "‚öñÔ∏è CRIMINAL CASES", 'font': {'size': 16}},
    number = {'suffix': "%", 'font': {'size': 36}},
    gauge = {
        'axis': {'range': [None, 100]},
        'bar': {'color': COLORS['accent1']},
        'steps': [
            {'range': [0, 25], 'color': COLORS['accent4']},
            {'range': [25, 50], 'color': COLORS['accent3']},
            {'range': [50, 100], 'color': COLORS['accent1']}
        ],
    }
))

fig.update_layout(**mobile_layout, height=400)
fig.write_html('../dashboard/charts/premium/criminal_gauge.html', config={'responsive': True})
print("‚úì Mobile-friendly criminal_gauge.html")

# 2. Top Parties - MOBILE OPTIMIZED
top_parties = df[df['Party'] != 'IND']['Party'].value_counts().head(10)

fig = px.bar(
    x=top_parties.values,
    y=top_parties.index,
    orientation='h',
    title='üèõÔ∏è TOP 10 PARTIES',
    labels={'x': 'Candidates', 'y': ''}
)

fig.update_layout(
    **mobile_layout,
    height=500,
    yaxis=dict(tickfont={'size': 10}),
    xaxis=dict(tickfont={'size': 10})
)

fig.write_html('../dashboard/charts/premium/top_parties_horizontal.html', config={'responsive': True})
print("‚úì Mobile-friendly top_parties_horizontal.html")

# 3. Education Treemap - MOBILE OPTIMIZED
education_data = df['Education_Clean'].value_counts().reset_index()
education_data.columns = ['Education', 'Count']

fig = px.treemap(
    education_data,
    path=['Education'],
    values='Count',
    title='üéì EDUCATION LEVELS',
    color='Count',
    color_continuous_scale='Viridis'
)

fig.update_traces(textfont={'size': 11})
fig.update_layout(**mobile_layout, height=500)
fig.write_html('../dashboard/charts/premium/education_treemap.html', config={'responsive': True})
print("‚úì Mobile-friendly education_treemap.html")

# 4. Top Richest - MOBILE OPTIMIZED
top_rich = df.nlargest(10, 'Assets_Numeric')[['Candidate', 'Assets_Numeric']]

fig = px.bar(
    top_rich,
    x='Assets_Numeric',
    y='Candidate',
    orientation='h',
    title='üèÜ TOP 10 RICHEST',
    labels={'Assets_Numeric': 'Assets (Rs)', 'Candidate': ''}
)

fig.update_layout(
    **mobile_layout,
    height=600,
    yaxis=dict(tickfont={'size': 9}),
    xaxis=dict(tickfont={'size': 10})
)

fig.write_html('../dashboard/charts/premium/top_richest_premium.html', config={'responsive': True})
