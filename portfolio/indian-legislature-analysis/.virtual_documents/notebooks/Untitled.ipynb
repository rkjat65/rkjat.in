import pandas as pd
import plotly.graph_objects as go
import plotly.express as px
import os

df = pd.read_csv('../data/processed/lok_sabha_2024_cleaned.csv')
os.makedirs('../dashboard/charts/premium', exist_ok=True)

COLORS = {
    'primary': '#2c3e50',
    'accent1': '#e74c3c',
    'accent2': '#3498db',
    'accent3': '#f39c12',
    'accent4': '#2ecc71',
    'background': '#ecf0f1',
}

print("‚úì Setup complete!")


# Criminal Gauge
criminal_pct = (df['Has_Criminal_Cases'].sum() / len(df)) * 100

fig = go.Figure(go.Indicator(
    mode = "gauge+number",
    value = criminal_pct,
    title = {'text': "‚öñÔ∏è CANDIDATES WITH CRIMINAL CASES"},
    number = {'suffix': "%"},
    gauge = {
        'axis': {'range': [None, 100]},
        'bar': {'color': COLORS['accent1']},
        'steps': [
            {'range': [0, 25], 'color': COLORS['accent4']},
            {'range': [25, 50], 'color': COLORS['accent3']},
            {'range': [50, 100], 'color': COLORS['accent1']}
        ],
    }
))

fig.update_layout(paper_bgcolor=COLORS['background'], height=500)
fig.write_html('../dashboard/charts/premium/criminal_gauge.html')
fig.show()
print("‚úì Chart 1 created!")


# Top Parties
top_parties = df[df['Party'] != 'IND']['Party'].value_counts().head(10)

fig = px.bar(
    x=top_parties.values,
    y=top_parties.index,
    orientation='h',
    title='üèõÔ∏è TOP 10 POLITICAL PARTIES',
    labels={'x': 'Candidates', 'y': 'Party'}
)

fig.update_layout(paper_bgcolor=COLORS['background'], height=600)
fig.write_html('../dashboard/charts/premium/top_parties_horizontal.html')
fig.show()
print("‚úì Chart 2 created!")


# Education Treemap
education_data = df['Education_Clean'].value_counts().reset_index()
education_data.columns = ['Education', 'Count']

fig = px.treemap(
    education_data,
    path=['Education'],
    values='Count',
    title='üéì EDUCATION LANDSCAPE',
    color='Count',
    color_continuous_scale='Viridis'
)

fig.update_layout(paper_bgcolor=COLORS['background'], height=600)
fig.write_html('../dashboard/charts/premium/education_treemap.html')
fig.show()
print("‚úì Chart 3 created!")


# Top Richest
top_rich = df.nlargest(10, 'Assets_Numeric')[['Candidate', 'Assets_Numeric']]

fig = px.bar(
    top_rich,
    x='Assets_Numeric',
    y='Candidate',
    orientation='h',
    title='üèÜ TOP 10 WEALTHIEST CANDIDATES',
    labels={'Assets_Numeric': 'Assets (Rs)', 'Candidate': ''}
)

fig.update_layout(paper_bgcolor=COLORS['background'], height=700)
fig.write_html('../dashboard/charts/premium/top_richest_premium.html')
fig.show()
print("‚úì Chart 4 created!")


print("\n‚úÖ ALL CHARTS CREATED!")
print("Location: dashboard/charts/premium/")
print("\nNext: Open these HTML files in your browser to view!")


