import plotly.graph_objects as go
import plotly.express as px
import pandas as pd

# Example: Creative party visualization
df = pd.read_csv('../data/processed/lok_sabha_2024_cleaned.csv')
party_counts = df['Party'].value_counts().head(10)

# Create custom styled bar chart
fig = go.Figure()

fig.add_trace(go.Bar(
    x=party_counts.values,
    y=party_counts.index,
    orientation='h',
    marker=dict(
        color=party_counts.values,
        colorscale='Viridis',
        line=dict(color='#2c3e50', width=2),
        pattern_shape="|",  # Add texture
    ),
    text=party_counts.values,
    textposition='outside',
    textfont=dict(size=14, color='white', family='Arial Black'),
))

# Styling to make it stand out
fig.update_layout(
    title={
        'text': 'üèõÔ∏è TOP 10 POLITICAL POWERHOUSES<br><sub>Lok Sabha 2024 Candidate Count</sub>',
        'font': {'size': 28, 'color': '#2c3e50', 'family': 'Arial Black'},
        'x': 0.5,
        'xanchor': 'center'
    },
    plot_bgcolor='rgba(0,0,0,0)',
    paper_bgcolor='#f8f9fa',
    xaxis=dict(
        showgrid=True,
        gridcolor='rgba(0,0,0,0.1)',
        title='Number of Candidates',
        titlefont=dict(size=16, color='#34495e')
    ),
    yaxis=dict(
        showgrid=False,
        title='',
        tickfont=dict(size=14, color='#2c3e50', family='Arial')
    ),
    height=600,
    margin=dict(l=150, r=50, t=100, b=50),
)
fig.show()
