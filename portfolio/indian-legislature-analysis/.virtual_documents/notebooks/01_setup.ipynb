import plotly.graph_objects as go

# Education levels in radial format
education_counts = df['Education_Clean'].value_counts()

fig = go.Figure(data=[go.Pie(
    labels=education_counts.index,
    values=education_counts.values,
    hole=0.6,
    marker=dict(
        colors=['#3498db', '#e74c3c', '#f39c12', '#2ecc71', '#9b59b6', '#1abc9c'],
        line=dict(color='white', width=3)
    ),
    textfont=dict(size=14, color='white', family='Arial Black'),
    pull=[0.1, 0, 0, 0, 0, 0],  # Highlight first segment
)])

fig.update_layout(
    title={
        'text': 'üéì EDUCATION LANDSCAPE<br><sub>8,338 Candidates Analyzed</sub>',
        'font': {'size': 26, 'color': '#2c3e50'},
        'x': 0.5
    },
    annotations=[{
        'text': '65%<br>Graduates+',
        'x': 0.5, 'y': 0.5,
        'font': {'size': 24, 'color': '#2c3e50'},
        'showarrow': False
    }],
    height=600,
    paper_bgcolor='#f8f9fa'
)
fig.show()
